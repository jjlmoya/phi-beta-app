{
  "name": "core",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "a": "eslint ./",
    "platforms": "npx cap add ios && npx cap add android",
    "app": "vite build && npx cap copy && npx cap sync"
  },
  "dependencies": {
    "@capacitor/android": "^3.0.0-rc.0",
    "@capacitor/cli": "^3.0.0-rc.0",
    "@capacitor/core": "^3.0.0-rc.0",
    "@capacitor/ios": "^3.0.0-rc.0",
    "axios": "^0.21.1",
    "vue": "^3.0.5",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0",
    "vuex-persistedstate": "^4.0.0-beta.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.11",
    "cssnano": "^5.0.0",
    "eslint-plugin-vue": "^7.8.0",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "standard": "^16.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "vite": "^2.1.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended"
    ],
    "rules": {
      "template-curly-spacing": [
        "off"
      ],
      "indent": [
        "error",
        4
      ],
      "semi": [
        "error",
        "never"
      ],
      "vue/html-indent": [
        "error",
        4,
        {
          "attribute": 1,
          "baseIndent": 1,
          "closeBracket": 0,
          "alignAttributesVertically": true
        }
      ],
      "vue/script-indent": [
        "error",
        4,
        {
          "baseIndent": 1
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "never",
            "normal": "any",
            "component": "always"
          }
        }
      ],
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 4,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/no-v-html": "off"
    },
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "stylelint": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "indentation": [
        2,
        {
          "baseIndentLevel": 1
        }
      ],
      "length-zero-no-unit": [
        true,
        {
          "ignore": [
            "custom-properties"
          ]
        }
      ]
    }
  }
}
